{
  "name": "rescript-esbuild-template",
  "version": "0.0.1",
  "scripts": {
    "build": "bsb -make-world && esbuild src/App.bs.js --outfile=dist/bundle.js",
    "clean": "bsb -clean-world",
    "start": "bsb -make-world -w",
    "dev": "concurrently --names rescript,esbuild -c red.bold,blue.bold --kill-others \"bsb -make-world -w\" \"esbuild src/App.bs.js --outfile=dist/bundle.js --watch\""
  },
  "keywords": [
    "rescript",
    "esbuild"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "bs-platform": "*",
    "concurrently": "^5.3.0",
    "esbuild": "^0.8.45"
  },
  "dependencies": {
    "@rescript/react": "^0.10.1"
  }
}
